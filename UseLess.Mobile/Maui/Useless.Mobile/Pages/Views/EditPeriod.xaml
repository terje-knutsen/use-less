<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Useless.Mobile.Pages.Converters"
             xmlns:vm="clr-namespace:Useless.Mobile.ViewModels"
             x:DataType="vm:EditBudgetViewModel"
             x:Class="Useless.Mobile.Pages.Views.EditPeriod">
    <ContentView.Resources>
        <ResourceDictionary>
            <converters:DateConverter x:Key="dateConverter"/>
        </ResourceDictionary>
    </ContentView.Resources>
    <StackLayout Orientation="Horizontal" Margin="0,0,0,28">
        <DatePicker
            MinimumDate="{Binding MinimumStartDate}"
            MaximumDate="{Binding MaximumStartDate}"
            Date="{Binding Start, Converter={StaticResource dateConverter}}"/>
        <Label Text=" - "/>
        <DatePicker
            MinimumDate="{Binding MinimumEndDate}"
            MaximumDate="{Binding MaximumEndDate}"
            Date="{Binding End, Converter={StaticResource dateConverter}}"/>
    </StackLayout>
</ContentView>
